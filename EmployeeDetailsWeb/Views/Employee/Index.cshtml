@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Add New Employee</h2>
        </div>
        <div class="col-6">
           <a  asp-controller="Employee" asp-action="Create" class=" btn-primary p-2"><i class="bi bi-plus-circle"></i>&nbsp;Add Employee </a>
        </div>
    </div>
    <br />
   
    <table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>EmployId</th>
            <th>First Name</th>
            <th>Last Order</th>
            <th>Age</th>
            <th>Address</th>
            <th>Phone Number</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in @Model)
        {
            <tr>
                <td width="10%">@item.EmployeeId</td>
                <td width="20%">@item.FirstName</td>
                <td width="20%">@item.LastName</td>
                <td width="10%">@item.Age</td>
                <td width="20%">@item.Address</td>
                <td width="20%">@item.PhoneNumber</td>
            </tr>
        }
    </tbody>
</table>

</div>